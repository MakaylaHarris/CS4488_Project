        <Border x:Name="taskBorder"
                BorderThickness="1,1,1,1"
                CornerRadius="8,8,8,8">
            <Grid x:Name="MyGrid">

                <Rectangle x:Name="MinRect" Fill="AliceBlue" Grid.RowSpan="2"/>
                <!--<Rectangle x:Name="LikelyRect" Fill="AliceBlue" Grid.RowSpan="2"/>-->
                <!--<Rectangle x:Name="MaxRect" Fill="AliceBlue" Grid.RowSpan="2"/>-->

                <!--<Rectangle x:Name="CompletionRect" Grid.ColumnSpan="3"/>-->
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>
        </Border>
    </Grid>
</UserControl>
