<Window x:Class="SmartPert.View.Windows.TaskEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartPert.View.Windows"
        mc:Ignorable="d"
        Title="Create/Edit Task" Height="518.663" Width="347.411" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="Task Name:" HorizontalAlignment="Right" Margin="10"/>
        <TextBox x:Name="TaskName" Grid.Column="2" Width="100"/>

        <Label Content="Task Description:" HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TaskDescription" HorizontalAlignment="Center" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="2"/>

        <Label Content="Start Date:" HorizontalAlignment="Right" Grid.Row="1"/>
        <DatePicker x:Name="StartDate" HorizontalAlignment="Left" Margin="113,62,0,0" VerticalAlignment="Top" Width="119" Grid.Row="1" Grid.ColumnSpan="2" Height="24"/>

        <Label Content="Min Duration:" HorizontalAlignment="Right" Grid.Row="3"/>
        <TextBox x:Name="MinDuration" Grid.Row="3" Grid.Column="2"/>

        <Label Content="Max Duration:" HorizontalAlignment="Right" Grid.Row="4"/>
        <TextBox x:Name="MaxDuration"  Grid.Row="3" Grid.Column="2"/>


        <Label Content="Assignees:" HorizontalAlignment="Right" Margin="60,124,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="48"/>

        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="126,227,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Grid.ColumnSpan="2" Height="20"/>
        <DatePicker x:Name="EndDate" HorizontalAlignment="Left" Margin="113,95,0,0" VerticalAlignment="Top" Width="119" Grid.Row="1" Grid.ColumnSpan="2" Height="24"/>
        <Label Content="Completed Date:" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="99"/>
        <Label Content="Most Likely Duration:" HorizontalAlignment="Left" Margin="-13,189,0,0" VerticalAlignment="Top" Height="26" Width="122"/>
        <TextBox x:Name="MostLikelyDuration" HorizontalAlignment="Left" Height="23" Margin="113,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
