<Window x:Class="SmartPert.View.Windows.TaskEditor"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartPert.View.Windows" xmlns:controls="clr-namespace:SmartPert.View.Controls"
        mc:Ignorable="d"
        Title="Create/Edit Task" Height="700" Width="350">
    <Grid Margin="10">
        <Grid.Resources>
            <Style TargetType="{x:Type controls:IntegerEdit}">
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style TargetType="{x:Type Label}">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Task Name:"/>
        <TextBox x:Name="TaskName" Grid.Column="2" Width="100" Height="30"/>
        <Label x:Name="NameInvalidLbl" Content="Invalid" HorizontalAlignment="Left" Foreground="Red" Visibility="Hidden"/>

        <Label Content="Task Description:" HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TaskDescription" HorizontalAlignment="Center" TextWrapping="Wrap" Width="250" Margin="0,0,0,10" Grid.ColumnSpan="2" Grid.Row="2"/>

        <Label Content="Start Date:" HorizontalAlignment="Right" Grid.Row="3"/>
        <Label x:Name="StartInvalidLbl" Content="Invalid" HorizontalAlignment="Left" Foreground="Red" Grid.Row="3" Visibility="Hidden"/>
        <DatePicker x:Name="StartDate" Grid.Column="2"  Grid.Row="3"/>

        <Label Content="Min Duration:" Grid.Row="4"/>
        <controls:IntegerEdit x:Name="MinDuration" Grid.Row="4" Grid.Column="2" IntegerChange="On_Min_Change"/>
        
        <Label Content="Most Likely Duration:" Grid.Row="5"/>
        <controls:IntegerEdit x:Name="MostLikelyDuration" Grid.Row="5" Grid.Column="2" IntegerChange="On_Likely_Change"/>

        <Label Content="Max Duration:" Grid.Row="6"/>
        <controls:IntegerEdit x:Name="MaxDuration"  Grid.Row="6" Grid.Column="2" IntegerChange="On_Max_Change"/>

        <Label Content="Completed Date:" Grid.Row="7"/>
        <Label x:Name="EndInvalidLbl" Grid.Row="7" HorizontalAlignment="Left" Foreground="Red" Content="Invalid" Visibility="Hidden"/>
        <DatePicker x:Name="EndDate" Grid.Row="7" Grid.Column="2"/>

        <Label Content="Assignees:" Grid.Row="8"/>
        <Button Content="Assign to..." Grid.Column="2" Grid.Row="8" Foreground="Blue" Background="Transparent" BorderThickness="0"/>
        <Grid x:Name="Assignees" Grid.Row="9" Grid.ColumnSpan="2">
            
        </Grid>

        <Button x:Name="btnCancel" Content="Cancel" Grid.Row="10" Click="btnCancel_Click"/>
        <Button x:Name="btnSubmit" Content="Submit" Grid.Row="10" Grid.Column="2" Click="btnSubmit_Click"/>
    </Grid>
</Window>
