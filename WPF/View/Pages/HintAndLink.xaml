<Page x:Class="SmartPert.View.Pages.HintAndLink"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartPert.View.Pages"
      mc:Ignorable="d" 
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontSize="28px"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HintAndDirect">

    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="HintLabel" Content="{Binding Path=HintText}" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Button x:Name="HintLink" Style="{StaticResource MaterialDesignRaisedLightButton}"  Content="{Binding Path=LinkText}" Grid.Row="1" />
    </Grid>
</Page>
