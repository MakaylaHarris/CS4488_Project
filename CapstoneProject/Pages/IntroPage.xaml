<Page x:Class="CapstoneProject.Pages.IntroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapstoneProject.Pages"
      mc:Ignorable="d"
      Title="IntroPage" Height="389.773" Width="654.545" Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <Label Content="Select A Project to Open" HorizontalAlignment="Center" Foreground="DarkSlateBlue" FontSize="20" Margin="0,60,0,0"/>
            <ComboBox Name="cboProject" Width="300" Margin="0,0,0,0"/>
            <Button Name="cmdOpen" Content="Open Project" HorizontalAlignment="Center" Height="59" Margin="0,10,0,0" VerticalAlignment="Center" Width="238" Click="CmdOpen_Click"/>
            <Label Content="Create A New Project" HorizontalAlignment="Center" Foreground="DarkSlateBlue" FontSize="20" Margin="0,40,0,0"/>
            <Button Name="cmdNew" Content="New Project" HorizontalAlignment="Center" Height="59" Margin="0,10,0,0" VerticalAlignment="Center" Width="238" Click="CmdNew_Click"/>
        </StackPanel>

    </Grid>
</Page>
